<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="cq:Page">
    <jcr:content
            jcr:mixinTypes="[sling:VanityPath]"
            jcr:primaryType="nt:unstructured"
            jcr:title="Link Inspector"
            sling:resourceType="granite/ui/components/shell/collectionpage"
            currentView="list"
            modeGroup="etoolbox-link-inspector"
            sling:vanityPath="/tools/etoolbox/link-inspector/datasource"
            pageURITemplate="#"
            targetCollection=".etoolbox-link-inspector">
        <views jcr:primaryType="nt:unstructured">
            <table
                    granite:rel="etoolbox-link-inspector"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/table"
                    itemprop="item"
                    layoutId="list"
                    maximized="{Boolean}true"
                    modeGroup="etoolbox-link-inspector"
                    path="${requestPathInfo.suffix}"
                    selectionMode="row"
                    sortMode="local"
                    stateId="link-inspector-ui">
                <columns
                        jcr:primaryType="nt:unstructured"
                        class="elc-card">
                    <select
                            jcr:primaryType="nt:unstructured"
                            select="{Boolean}true"/>
                    <title
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Link"
                            class="link"
                            sortable="{Boolean}true"/>
                    <linkStatusCode
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Code"
                            class="statusCode"
                            sortType="numeric"
                            sortable="{Boolean}true"/>
                    <linkStatusMessage
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Status Message"
                            class="statusMessage"
                            sortable="{Boolean}true"/>
                    <pagePath
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Page"
                            class="pagePath"
                            sortable="{Boolean}true"/>
                    <component
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Component"
                            class="component"
                            sortable="{Boolean}true"/>
                    <property
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Property"
                            class="propertyName"
                            sortable="{Boolean}true"/>
                </columns>
                <datasource
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="etoolbox-link-inspector/components/gridDatasource"
                        itemResourceType="etoolbox-link-inspector/components/gridConfig"
                        limit="100000"
                        offset="100"/>
            </table>
        </views>
    </jcr:content>
</jcr:root>
