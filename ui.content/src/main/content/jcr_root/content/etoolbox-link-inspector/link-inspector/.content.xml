<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="cq:Page">
    <jcr:content
            jcr:mixinTypes="[sling:VanityPath]"
            jcr:primaryType="nt:unstructured"
            jcr:title="Link Inspector"
            sling:resourceType="granite/ui/components/shell/collectionpage"
            currentView="list"
            modeGroup="etoolbox-link-inspector"
            sling:vanityPath="/etoolbox/link-inspector"
            pageURITemplate="#"
            targetCollection=".etoolbox-link-inspector">
        <head jcr:primaryType="nt:unstructured">
            <viewport
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/admin/page/viewport"/>
            <meta
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/meta"
                    content="chrome=1"
                    name="X-UA-Compatible"/>
            <winmode
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="cq/gui/components/siteadmin/admin/page/winmode"/>
            <title
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Link Inspector"
                    sling:resourceType="cq/gui/components/siteadmin/admin/page/title"/>
            <favicon
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/page/favicon"/>
            <clientlibs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/includeclientlibs"
                    categories="[coralui3,granite.ui.coral.foundation,link-inspector-ui]"/>
        </head>
        <views jcr:primaryType="nt:unstructured">
            <container
                    jcr:primaryType="nt:unstructured"
                    granite:class="elc-report-container"
                    sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <table
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/table"
                        granite:rel="etoolbox-link-inspector"
                        granite:class="elc-grid"
                        src="/content/etoolbox-link-inspector/link-inspector/jcr:content/views/container/items/table{.offset,limit}.html{+id}?page=${param.page}&amp;type=${param.type}&amp;substring=${param.substring}"
                        itemprop="item"
                        limit="{Long}50"
                        layoutId="list"
                        maximized="{Boolean}true"
                        modeGroup="etoolbox-link-inspector"
                        path="${requestPathInfo.suffix}"
                        selectionMode="row"
                        sortMode="local"
                        stateId="link-inspector-ui">
                        <columns jcr:primaryType="nt:unstructured">
                            <select
                                    jcr:primaryType="nt:unstructured"
                                    select="{Boolean}true"/>
                            <status
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Status"
                                    class="status"/>
                            <title
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Link"
                                    class="link"/>
                            <pagePath
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Page"
                                    class="pagePath"/>
                            <component
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Component"
                                    class="component"/>
                            <property
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Property"
                                    class="propertyName"/>
                        </columns>
                        <datasource
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="etoolbox-link-inspector/components/gridDatasource"
                                itemResourceType="etoolbox-link-inspector/components/gridConfig"/>
                    </table>
                    <statistics
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/include"
                            path="/content/etoolbox-link-inspector/data/stats"
                            resourceType="etoolbox-link-inspector/components/stats/statsPanel"/>
                    <ticker jcr:primaryType="nt:unstructured"
                            sling:resourceType="etoolbox-contractor/components/ticker"
                            granite:id="wait"
                            topic="etoolbox/link-inspector/job/datafeed/generate"
                            controls="#scan"
                            tick="200"
                            tracks="/content/etoolbox/contractor/servlet/task"/>
                </items>
            </container>
        </views>
        <footer jcr:primaryType="nt:unstructured"
                sling:resourceType="etoolbox-link-inspector/components/footer"/>
        <actions jcr:primaryType="nt:unstructured">
            <primary jcr:primaryType="nt:unstructured">
                <fixSelected
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                        action="cq-admin.etoolbox.linkinspector.action.replace-by-pattern"
                        activeCondition="cq-admin.etoolbox.linkinspector.actioncondition.replace-by-pattern"
                        disabled="{Boolean}true"
                        icon="findAndReplace"
                        rel="etoolbox-link-inspector-fix-by-pattern"
                        target=".etoolbox-link-inspector"
                        text="Fix Selected"
                        title="Fix Selected"
                        granite:id="elc-replace-by-pattern"
                        variant="primary"/>
                <filterOptions
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                        granite:id="elc-filter-options"
                        action="foundation.dialog"
                        icon="filter"
                        rel="etoolbox-link-inspector-filter-options"
                        target=".etoolbox-link-inspector"
                        text="Filter"
                        title="Filter"
                        variant="minimal">
                    <data jcr:primaryType="nt:unstructured"
                          nesting="hide"
                          src.uritemplate="/content/etoolbox-link-inspector/link-inspector/filterOptions.html?substring=${param.substring}"/>
                </filterOptions>
                <deleteReport
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                        granite:id="elc-delete-report"
                        action="cq-admin.etoolbox.linkinspector.action.delete-report"
                        icon="delete"
                        target=".etoolbox-link-inspector"
                        text="Delete"
                        title="Delete"
                        variant="minimal"/>
            </primary>
            <secondary jcr:primaryType="nt:unstructured">
                <settings
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/anchorbutton"
                        href="/etoolbox/link-inspector/settings.html"
                        icon="gears"
                        text="Settings"
                        granite:title="Settings"
                        variant="secondary"/>
                <scan
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                        granite:id="scan"
                        granite:title="Scan for links"
                        text="Scan now"
                        icon="play"
                        variant="primary"/>
            </secondary>
        </actions>
    </jcr:content>
    <filterOptions
            jcr:primaryType="nt:unstructured"
            jcr:title="Filter Links"
            sling:resourceType="granite/ui/components/coral/foundation/dialog"
            granite:class="modal-form"
            granite:id="filter--dialog">
        <items jcr:primaryType="nt:unstructured">
            <form jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/form"
                  foundationForm="{Boolean}true"
                  style="vertical">
                <items jcr:primaryType="nt:unstructured">
                    <content jcr:primaryType="nt:unstructured"
                             jcr:title="Add by Path"
                             sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <type
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            granite:id="linkTypesSelect"
                                            fieldLabel="By type"
                                            name="./linkTypes">
                                        <datasource jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="/bin/etoolbox/link-inspector/settings/resolvers"/>
                                    </type>
                                    <text
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            granite:id="byTextFilter"
                                            fieldLabel="By text"
                                            value="${param.substring}"
                                            name="./byText"/>
                                </items>
                            </column>
                        </items>
                    </content>
                </items>
            </form>
        </items>
        <footer jcr:primaryType="nt:unstructured">
            <resetButton
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/button"
                    granite:id="dialog-reset"
                    text="Reset"
                    variant="secondary"/>
            <cancelButton
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/button"
                    granite:id="dialog-cancel"
                    text="Cancel"
                    variant="secondary">
                <parentConfig
                        jcr:primaryType="nt:unstructured"
                        close="{Boolean}true"/>
            </cancelButton>
            <okButton
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/button"
                    granite:id="dialog-action"
                    text="Apply"
                    variant="primary"/>
        </footer>
    </filterOptions>
</jcr:root>
