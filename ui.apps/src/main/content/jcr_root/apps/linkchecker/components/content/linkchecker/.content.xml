<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="cq:Page">
    <jcr:content
            jcr:mixinTypes="[sling:VanityPath]"
            jcr:primaryType="nt:unstructured"
            jcr:title="Exadel Link Checker"
            sling:resourceType="granite/ui/components/shell/collectionpage"
            currentView="list"
            modeGroup="exadel-link-checker"
            sling:vanityPath="/tools/exadel/linkchecker"
            pageURITemplate="#"
            targetCollection=".exadel-link-checker">
        <head jcr:primaryType="nt:unstructured">
            <viewport
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/admin/page/viewport"/>
            <meta
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/meta"
                    content="chrome=1"
                    name="X-UA-Compatible"/>
            <winmode
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="cq/gui/components/siteadmin/admin/page/winmode"/>
            <title
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Exadel Link Checker Tool"
                    sling:resourceType="cq/gui/components/siteadmin/admin/page/title"/>
            <favicon
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/page/favicon"/>
            <clientlibs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/includeclientlibs"
                    categories="[coralui3,granite.ui.coral.foundation,link-checker-ui]"/>
        </head>
        <views jcr:primaryType="nt:unstructured">
            <list
                    granite:rel="exadel-link-checker"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/table"
                    itemprop="item"
                    layoutId="list"
                    limit="{Long}40"
                    maximized="{Boolean}true"
                    modeGroup="exadel-link-checker"
                    path="${requestPathInfo.suffix}"
                    selectionMode="row"
                    sortMode="local"
                    stateId="link-checker-ui">
                <columns
                        jcr:primaryType="nt:unstructured"
                        class="card-exadel-link-checker">
                    <select
                            jcr:primaryType="nt:unstructured"
                            select="{Boolean}true"/>
                    <title
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Link"
                            class="link"
                            sortable="{Boolean}true"/>
                    <linkStatusCode
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Code"
                            class="statusCode"
                            sortType="numeric"
                            sortable="{Boolean}true"/>
                    <linkStatusMessage
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Status Message"
                            class="statusMessage"
                            sortable="{Boolean}true"/>
                    <pagePath
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Page"
                            class="pagePath"
                            sortable="{Boolean}true"/>
                    <component
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Component"
                            class="component"
                            sortable="{Boolean}true"/>
                    <property
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Property"
                            class="propertyName"
                            sortable="{Boolean}true"/>
                </columns>
                <datasource
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="linkchecker/components/gridDatasource"
                        itemResourceType="linkchecker/components/gridConfig"
                        limit="100000"
                        offset="100"/>
            </list>
        </views>
        <actions jcr:primaryType="nt:unstructured">
            <selection jcr:primaryType="nt:unstructured">
                <fixBrokenLink
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                        action="cq-admin.exadel.linkchecker.action.fix-broken-link"
                        activeSelectionCount="multiple"
                        icon="publish"
                        rel="exadel-link-checker-action-publish"
                        target=".exadel-link-checker"
                        text="Fix Broken Link"
                        title="Fix Broken Link"
                        variant="actionBar">
                </fixBrokenLink>
            </selection>
        </actions>
    </jcr:content>
</jcr:root>
